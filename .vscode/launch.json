{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NestJS with Nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/main.ts",  // Entry point of your NestJS app
            "restart": true,
            "args": ["--inspect"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}